.chatspace
  .chat-side
    .chat-user
      .chat-user__name
        %h5= current_user.name
      .chat-user__action
        .chat-user__action__group
        = link_to edit_user_registration_path(current_user), class: 'chat-user__action__group' do
          %i.fa.fa-cog
        .chat-user__action__user
        = link_to '', class: 'chat-user__action__user' do
          %i.fa.fa-pencil-square-o
    .chat-group
      .chat-group__name
        %p らっこ
      .chat-group__message
        %p まだメッセージはありません
    .chat-group
      .chat-group__name
        %p ねこ
      .chat-group__message
        %p まだメッセージはありません
    .chat-group
      .chat-group__name
        %p うさぎ
      .chat-group__message
        %p まだメッセージはありません
  .chat-main
    .chat-header
      .chat-header__left
        %h2.group らっこ
        %p.user Members: tanamana
      .chat-header__right
        %a.edit-btn Edit
    .chat-body
      %ul.chat-contents
        %li.chat-content
          .chat-content__header
            .chat-content__name
              %p tanamana
            .chat-content__time
              %p 2016/12/10 23:59:59
          .chat-content__message
            %p らっこ可愛い
        %li.chat-content
          .chat-content__header
            .chat-content__name
              %p tanamana
            .chat-content__time
              %p 2016/12/11 00:00:01
          .chat-content__message
            %p らっこ眠たい
        %li.chat-content
          .chat-content__header
            .chat-content__name
              %p tanamana
            .chat-content__time
              %p 2016/12/11 23:59:59
          .chat-content__message
            %p らっこ遊んでる
    .chat-footer
      .chat-footer__messagebody
        .chat-footer__messagebody__text
          %textarea{ placeholder: 'type a message' }
        .chat-footer__messagebody__image
          %i.fa.fa-picture-o
      .chat-footer__send
        %a.send-btn Send
